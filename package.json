{
  "name": "subfire4",
  "version": "4.0.0",
  "description": "Monorepo of SubFire 4",
  "main": "index.js",
  "repository": "https://github.com/acroyear/subfire",
  "author": "JWS",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "resolutions": {
    "babel-loader": "8.1.0",
    "webpack": "4.44.2"
  },
  "scripts": {
    "story": "lerna run storybook --stream",
    "libbuild": "lerna run libbuild --stream",
    "prestart": "yarn libbuild",
    "start": "lerna run start --stream",
    "comp-bundle": "cd packages/components/src && find ./components ./hooks -name \"*.*\" | grep -v .stories | sed \"s/^/export * from \\\"/\" | sed \"s/$/\\\"/\" | sed \"s/\\.[jt]sx*//\" > index.ts"
  }
}